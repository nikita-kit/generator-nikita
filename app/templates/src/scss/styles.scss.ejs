/**
 * ---------------------------------------------------------------------------------------------------- #
 *
 * Main Stylesheet entry file
 *
 * all imported files will be bundled to styles.css
 * in this file it is possible to include files with globbing
 * to include CSS files, just omit the file extension
 */
<% if (config.get('features').includes('webfonts')) { -%>

// Webfonts
@import "webfonts";
<% } -%>
<% if (config.get('features').includes('browserReset')) { -%>

// Browser-Reset
@import "reset";
<% } -%>

// Variables
@import "variables/**/*.scss";

<% if (config.get('nikitaCssMixins').length) { -%>
// nikita.css Mixins
<%
    var nikitaCssMixins = config.get('nikitaCssMixins');
    for (var i = 0; i < nikitaCssMixins.length; i++)
    {
-%>@import "../../node_modules/nikita-css/mixins/_<%= nikitaCssMixins[i] %>.scss";
<%
    }
}
-%>

// Mixins
@import "mixins/**/*.scss";

<% if (config.get('nikitaCssExtends').length) { -%>
// nikita.css Extends
<%
    var nikitaCssExtends = config.get('nikitaCssExtends');
    for (var i = 0; i < nikitaCssExtends.length; i++)
    {
-%>@import "../../node_modules/nikita-css/extends/_<%= nikitaCssExtends[i] %>.scss";
<%
    }
}
-%>

// Extends
@import "extends/**/*.scss";

<% if (config.get('features').includes('svgBackgrounds')) { -%>
// SVG Background Extends (will be generated by grunt)
@import "../../tmp/svg-bg-extends/_bg-data-svg.scss";
<% } -%>

// Basic Formatting
@import "basics";

// All Components
@import "blocks/**/*.scss";
@import "../components/**/*.scss";
