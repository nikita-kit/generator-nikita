/* Documentation http://idangero.us/swiper/ */

import logging from 'node-logging-js';
import jsb from 'node-jsb';
import swiper from 'swiper';
import app from './app';

class Slider {
	constructor(element, options) {
		logging.applyLogging(this, 'Slider');
		this.logDebug('options:', options);
		this.element = element;

		this.initializeSwiper();
	}

	initializeSwiper() {
		this.slider = new Swiper(this.element, {
			slidesPerView: 1,
			pagination: '.swiper-pagination',
			paginationClickable: true,
			nextButton: '.swiper-button-next',
			prevButton: '.swiper-button-prev'
		});
	}
}

jsb.registerHandler('Slider', Slider);
export default Slider;
